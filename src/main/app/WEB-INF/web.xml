<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>jfork</display-name>
	<filter>
        <filter-name>global</filter-name>
        <filter-class> com.riguz.commons.auth.GlobalFilter</filter-class>
        <init-param>
            <param-name>cookieName</param-name>
            <param-value>JFROK_SESSION_ID</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>global</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<!-- JFinal Listener -->
	<filter>
		<filter-name>jfinal</filter-name>
		<filter-class>com.jfinal.core.JFinalFilter</filter-class>
		<init-param>
			<param-name>configClass</param-name>
			<param-value>com.riguz.jfork.app.config.AppConfig</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>jfinal</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
